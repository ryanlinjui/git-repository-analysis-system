# Firebase Frontend Configuration
PUBLIC_FIREBASE_API_KEY="your-api-key"
PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.firebasestorage.app"
PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
PUBLIC_FIREBASE_APP_ID="your-app-id"
PUBLIC_FIREBASE_MEASUREMENT_ID="your-measurement-id"

# Firebase Backend Configuration. Firebase service account JSON file
GOOGLE_APPLICATION_CREDENTIALS="your-service-account-file.json"

# LLM Configuration (Google)
GOOGLE_GENAI_API_KEY="your-google-genai-api-key"

# Security Configuration
IP_HASH_SALT="generate-with-openssl-rand-base64-32"

# Server Application Port (App, Grafana)
PORT="your-port-number"

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN="your-cloudflare-tunnel-token"

# Node Environment
NODE_ENV="development"

# Grafana Configuration
GF_USERS_ALLOW_SIGN_UP=false
GF_SECURITY_ADMIN_PASSWORD="your-secure-password"

# ========================================
# GitHub Secrets (for CI/CD deployment)
# ========================================
# Add these secrets in GitHub Repository Settings > Secrets and variables > Actions
# NOTE: .env and service-account-file.json should be placed in DEPLOY_DIRECTORY on VM
# They will NOT be overwritten during deployment

# DEPLOY_HOST="your-vm-host-or-ip"
# DEPLOY_USER="your-vm-username"
# DEPLOY_DIRECTORY="your-deployment-directory-on-vm"
# DEPLOY_SSH_PRIVATE_KEY="your-vm-ssh-private-key"