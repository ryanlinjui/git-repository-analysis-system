rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      // Only server can write (via Admin SDK through /api/auth/signin)
      allow write: if false;
    }
    
    // Scans collection
    match /scans/{scanId} {
      // Users can only read their own scans
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Only server can write (via Admin SDK through API endpoints)
      allow write: if false;
    }
    
    // Repository collection (shared analysis results)
    match /repository/{repoId} {
      // Anyone can read repository analysis results (public sharing feature)
      allow read: if true;
      // Only server can write (via Admin SDK)
      allow write: if false;
    }
    
    // Anonymous users collection (for IP-based rate limiting)
    match /anonymous_users/{hashedIp} {
      // Server-only access for rate limiting
      allow read, write: if false;
    }
  }
}
