rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection (minimal data, most info from Firebase Auth)
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      // Only server can write (via Admin SDK through /api/auth/signin)
      allow write: if false;
    }
    
    // Scans collection
    match /scans/{scanId} {
      // Allow anyone to read scans (for link sharing - anyone with the link can view)
      allow read: if true;
      
      // Allow delete only by the scan owner (authenticated user)
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
      
      // Allow update only for cancellation by the scan owner (authenticated user)
      // Status is numeric: 0=QUEUED, 1=RUNNING, 2=SUCCEEDED, 3=FAILED
      // Ensure the user can only cancel their own scan
      allow update: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.status == 3
                    && request.resource.data.errorCode == 'CANCELLED'
                    && request.resource.data.userId == resource.data.userId;
      
      // No create from client (only server via Admin SDK)
      allow create: if false;
    }
    
    // Repository collection (shared analysis results)
    match /repository/{repoId} {
      // Anyone can read repository analysis results (public sharing feature)
      allow read: if true;
      // Only server can write (via Admin SDK)
      allow write: if false;
    }
    
    // Anonymous users collection (for IP-based rate limiting)
    match /anonymous_users/{hashedIp} {
      // Allow anyone to read their own quota (matched by hashedIp from client)
      // Client determines hashedIp from their last scan's userId
      allow read: if true;
      // Only server can write (via Admin SDK for quota tracking)
      allow write: if false;
    }
  }
}
