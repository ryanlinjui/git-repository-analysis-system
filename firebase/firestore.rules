rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isScanOwner(scanData) {
      return scanData.userId == null || isOwner(scanData.userId);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Don't allow user deletion through Firestore
      
      // User history subcollection
      match /history/{historyId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Scans collection
    match /scans/{scanId} {
      // Allow read if:
      // 1. Scan is public, OR
      // 2. User is the owner (authenticated or anonymous via session)
      allow read: if resource.data.isPublic == true 
                  || isScanOwner(resource.data);
      
      // Allow create if:
      // 1. Authenticated user, OR
      // 2. Anonymous user (userId is null)
      allow create: if isAuthenticated() 
                    || request.resource.data.userId == null;
      
      // Allow update/delete only if owner
      allow update: if isScanOwner(resource.data);
      allow delete: if isScanOwner(resource.data);
    }
    
    // Results collection
    match /results/{resultId} {
      // Results have same permission as their corresponding scan
      allow read: if exists(/databases/$(database)/documents/scans/$(resultId)) 
                  && (get(/databases/$(database)/documents/scans/$(resultId)).data.isPublic == true
                      || isScanOwner(get(/databases/$(database)/documents/scans/$(resultId)).data));
      
      // Only server can write results
      allow write: if false;
    }
    
    // Quotas collection (server-only)
    match /quotas/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Server-only writes
    }
    
    // Anonymous rate limits (server-only)
    match /anonymous_limits/{ipHash} {
      allow read, write: if false; // Server-only
    }
  }
}
